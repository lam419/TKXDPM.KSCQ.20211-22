<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="150.0" prefWidth="298.0" style="-fx-border-color: #ccd9ff;" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefHeight="120.0" prefWidth="298.0">
            <children>
                <Label fx:id="nameStation" text="141 Đại La">
                    <font>
                        <Font name="System Bold" size="30.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="15.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="addressStation" text="Hai Bà Trưng, Hà Nội">
                    <font>
                        <Font size="25.0"/>
                    </font>
                </Label>
                <Label fx:id="numBike" text="Còn 12 xe">
                    <font>
                        <Font name="System Italic" size="25.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="15.0"/>
            </padding>
        </VBox>
        <VBox alignment="CENTER_RIGHT" prefHeight="120.0" prefWidth="298">
            <children>
                <Button mnemonicParsing="false" onMouseClicked="#viewBikes" prefHeight="75.0" prefWidth="100.0"
                        style="-fx-background-color: red;" text="Xem" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="25.0"/>
                    </font>
                    <VBox.margin>
                        <Insets right="15.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
